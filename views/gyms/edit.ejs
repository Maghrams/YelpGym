<% layout('/layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center"> Edit Gym</h1>
    <div class="col-6 offset-3">
        <form action="/gyms" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label"> Name </label>
                <input type="text" class="form-control" id="name" name="gym[name]" value="<%=gym.name%>"
            </div>
            <!-- TODO remove break later-->
            <br>
            <div class="mb-3">
                <label for="address" class="form-label"> Full Address </label>
                <input type="text" class="form-control" id="address" name="gym[address.streetName]" value="<%=gym.address.streetName%>">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label"> Owner Name </label>
                <input type="text" class="form-control name="gym[owner.name]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Gym</button>
            </div>
        </form>
    </div>
    <a href="/gyms/<%=gym._id%>">Back to Gym</a>
    <br>
    <a  href="/gyms"> All Gyms</a>
</div>

