<% layout('/layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center"> New Gym</h1>
    <div class="col-6 offset-3">
        <form action="/gyms" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label"> Name </label>
                <input type="text" class="form-control" id="name" name="gym[name]">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label"> Full Address </label>
                <input type="text" class="form-control name="gym[address.streetName]">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label"> Owner Name </label>
                <input type="text" class="form-control name="gym[owner.name]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Gym</button>
            </div>
        </form>
        <a href="/gyms"> All Gyms</a>
    </div>
</div>
